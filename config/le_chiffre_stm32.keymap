    L_BOT_ROW(_NUM)               R_BOT_ROW(_NUM)
          ___  ___                ___  ___
)

ZMK_LAYER(nav_layer,
    L_TOP_ROW(_NAV)               R_TOP_ROW(_NAV)
    L_MID_ROW(_NAV)               R_MID_ROW(_NAV)
    L_BOT_ROW(_NAV)               R_BOT_ROW(_NAV)
          ___  ___                ___  ___
)

ZMK_LAYER(fn_layer,
    L_TOP_ROW(_FN)                R_TOP_ROW(_FN)
    L_MID_ROW(_FN)                R_MID_ROW(_FN)
    L_BOT_ROW(_FN)                R_BOT_ROW(_FN)
          ___  ___                ___  ___
)
