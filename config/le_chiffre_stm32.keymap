/* keymap */

ZMK_LAYER(default_layer,
                L_TOP_ROW(_DEF)      R_TOP_ROW(_DEF)
                L_MID_ROW(_DEF)      R_MID_ROW(_DEF)
                L_BOT_ROW(_DEF)      R_BOT_ROW(_DEF)
    &kp LCTRL   &lt_hold NUM SPACE   &lt_tap NAV SPACE   &kp LGUI
)

ZMK_LAYER(num_layer,
    L_TOP_ROW(_NUM)               R_TOP_ROW(_NUM)
